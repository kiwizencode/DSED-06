@model DSED06_Aquatic_Pet_Store.Models.RECORD_PACKING

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Packing Record</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <!-- <h4>RECORD_PACKING</h4>   -->
    
    <hr />
    <dl class="dl-horizontal">
        <dt>Pet Code :</dt>
        <dd>@Html.DisplayFor(model => model.PET_RECORD.CODE)</dd>

        <dt>Pet Description :</dt>
        <dd>@Html.DisplayFor(model => model.PET_RECORD.DESCRIPTION)</dd>


        <dt>Pet Size:</dt>
        <dd>@Html.DisplayFor(model => model.PET_RECORD.PET_SIZE.DESCRIPTION)</dd>

        <dt>Pics / Bag :</dt>
        <dd>@Html.DisplayFor(model => model.BAG)</dd>

        <dt>Pics / Box :</dt>
        <dd>@Html.DisplayFor(model => model.BOX)</dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default col-md-offset-1" />             
            <!-- |   -->
            <p>&nbsp</p>
            @Html.ActionLink("Back to Packing Maintenance Page", "Index")
        </div>
    }
</div>

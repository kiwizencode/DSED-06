@model DSED06_Aquatic_Pet_Store.Models.RECORD_PACKING

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Packing</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal">
        <!-- <h4>RECORD_PACKING</h4>  -->
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RECORD_FK)

        <div class="panel-group">
            <dl class="dl-horizontal">
                <dt>Pet Code :</dt>
                <dd>
                    <b><i>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp @Html.DisplayFor(model => model.PET_RECORD.CODE)</i></b>
                </dd>
                <br />
                <dt>Pet Description :</dt>
                <dd>
                    <b><i>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp @Html.DisplayFor(model => model.PET_RECORD.DESCRIPTION)</i></b>
                </dd>
                <br />
                <dt>Pet Size :</dt>
                <dd>
                    <b><i>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp @Html.DisplayFor(model => model.PET_RECORD.PET_SIZE.DESCRIPTION)</i></b>
                </dd>
            </dl>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BAG, "Bag :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BAG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BAG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BOX, "Box :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BOX, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BOX, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Packing Maintenance Page", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
